<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.universitymanagementsystem.controllers.AdminDashboardController"
            style="-fx-background-color: #f5f5f5;">

    <!-- ===== Top Header ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" BorderPane.alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #37474f, #455a64); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
            <padding>
                <Insets top="20" bottom="20" left="25" right="25"/>
            </padding>

            <Label text="Admin Dashboard"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="University Management System"
                   style="-fx-text-fill: #cfd8dc; -fx-font-size: 14px;"/>
        </HBox>
    </top>

    <!-- ===== Left Navigation ===== -->
    <left>
        <VBox spacing="12"
              style="-fx-background-color: white; -fx-border-color: #cfd8dc; -fx-border-width: 0 1 0 0; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 2, 0);">
            <padding>
                <Insets top="25" left="15" right="15" bottom="25"/>
            </padding>

            <Button text="Register Student"
                    prefWidth="200"
                    onAction="#openRegisterStudent"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="Register Faculty"
                    prefWidth="200"
                    onAction="#openRegisterFaculty"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="Assign Course"
                    prefWidth="200"
                    onAction="#openAssignCourse"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="View Students"
                    prefWidth="200"
                    onAction="#viewStudents"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="View Faculty"
                    prefWidth="200"
                    onAction="#viewFaculty"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="Change Password"
                    prefWidth="200"
                    onAction="#openChangePassword"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="Notice Board"
                    prefWidth="200"
                    onAction="#openNoticeBoard"
                    style="-fx-background-color: white; -fx-text-fill: #455a64; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <VBox VBox.vgrow="ALWAYS"/> <!-- Spacer -->

            <Button text="Logout"
                    prefWidth="200"
                    onAction="#logout"
                    style="-fx-background-color: #ffebee; -fx-text-fill: #c62828; -fx-border-color: #ef9a9a; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </VBox>
    </left>


    <!-- ===== Center Content ===== -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Welcome, Admin"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #37474f;"/>

            <Label text="Use the navigation panel to manage students and faculty."
                   style="-fx-text-fill: #78909c; -fx-font-size: 16px;"/>
        </VBox>
    </center>

</BorderPane>

