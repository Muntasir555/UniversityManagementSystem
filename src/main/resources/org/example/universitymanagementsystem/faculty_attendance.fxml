<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.universitymanagementsystem.controllers.FacultyAttendanceController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Mark Attendance" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <ComboBox fx:id="courseComboBox" promptText="Select Course" prefWidth="250"/>
                <DatePicker fx:id="datePicker" promptText="Select Date"/>
                <Button text="Save Attendance" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            </HBox>
            <Label fx:id="messageLabel" style="-fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="rollNoCol" text="Details" /> <!-- Merged or ID -->
                <TableColumn fx:id="nameCol" text="Student Name" />
                <TableColumn fx:id="statusCol" text="Present?" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
