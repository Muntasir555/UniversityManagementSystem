<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.universitymanagementsystem.controllers.StudentLoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #e8eaf6, #ffffff);">

    <!-- ===== Top Title ===== -->
    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="40" bottom="20"/>
            </padding>

            <Label text="Student Login"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a237e; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 1, 1);"/>

            <Label text="Please enter your student credentials"
                   style="-fx-text-fill: #3949ab; -fx-font-size: 14px;"/>
        </VBox>
    </top>

    <!-- ===== Center Login Form ===== -->
    <center>
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 40;"
              maxWidth="400">

            <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
                <Label text="Department"
                       style="-fx-font-size: 14px; -fx-text-fill: #283593; -fx-font-weight: bold;"/>
                <ChoiceBox fx:id="departmentChoiceBox"
                           prefWidth="300"
                           style="-fx-background-color: #f5f5f5; -fx-border-color: #c5cae9; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
                <Label text="Email"
                       style="-fx-font-size: 14px; -fx-text-fill: #283593; -fx-font-weight: bold;"/>
                <TextField fx:id="emailField"
                           promptText="example@student.edu"
                           prefWidth="300"
                           style="-fx-background-color: #f5f5f5; -fx-border-color: #c5cae9; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>

            <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
                <Label text="Password"
                       style="-fx-font-size: 14px; -fx-text-fill: #283593; -fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField"
                               promptText="Enter your password"
                               prefWidth="300"
                               style="-fx-background-color: #f5f5f5; -fx-border-color: #c5cae9; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>

            <Button text="Login"
                    prefWidth="300"
                    onAction="#handleLogin"
                    style="-fx-background-color: #3949ab; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Label fx:id="errorLabel"
                   text=""
                   style="-fx-text-fill: #d32f2f; -fx-font-size: 12px;"/>

        </VBox>
    </center>

    <!-- ===== Bottom ===== -->
    <bottom>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="20" top="20"/>
            </padding>

            <Button text="â† Back to Home"
                    style="-fx-background-color: transparent; -fx-text-fill: #1a237e; -fx-cursor: hand; -fx-underline: true;"
                    onAction="#goBack"/>
        </VBox>
    </bottom>

</BorderPane>

