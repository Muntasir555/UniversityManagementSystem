<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.universitymanagementsystem.controllers.StudentResultsController"
      spacing="20" alignment="CENTER">

    <Label text="Examination Results" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS" maxWidth="800">
        <!-- Columns added dynamically via Controller -->
    </TableView>
    
    <VBox spacing="5" alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
        <Label fx:id="cgpaLabel" text="CGPA: --" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: green;"/>
        <Label text="Semester Breakdown:" style="-fx-font-weight: bold;"/>
        <Label fx:id="semesterGpaLabel" text="..." wrapText="true"/>
    </VBox>

</VBox>
