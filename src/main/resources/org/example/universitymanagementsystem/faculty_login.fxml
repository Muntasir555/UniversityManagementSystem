<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.universitymanagementsystem.controllers.FacultyLoginController">

    <!-- ===== Top Title ===== -->
    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="30"/>
            </padding>

            <Label text="Faculty Login"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

            <Label text="Login using your faculty credentials"
                   style="-fx-text-fill: #666666;"/>
        </VBox>
    </top>

    <!-- ===== Center Login Form ===== -->
    <center>
        <VBox alignment="CENTER" spacing="15"
              style="-fx-border-color: #cccccc; -fx-border-radius: 8; -fx-background-radius: 8;"
              maxWidth="350">
            <padding>
                <Insets top="30" bottom="30" left="40" right="40"/>
            </padding>

            <Label text="Email"
                   style="-fx-font-size: 14px;"/>

            <TextField fx:id="emailField"
                       promptText="example@faculty.edu"
                       prefWidth="260"/>

            <Label text="Password"
                   style="-fx-font-size: 14px;"/>

            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           prefWidth="260"/>

            <Button text="Login"
                    prefWidth="260"
                    style="-fx-font-size: 14px;"
                    onAction="#handleLogin"/>

            <Label fx:id="errorLabel"
                   text=""
                   style="-fx-text-fill: red;"/>

        </VBox>
    </center>

    <!-- ===== Bottom ===== -->
    <bottom>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="15"/>
            </padding>

            <Button text="â† Back to Home"
                    style="-fx-background-color: transparent; -fx-text-fill: #0066cc;"
                    onAction="#goBack"/>
        </VBox>
    </bottom>

</BorderPane>

