<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.universitymanagementsystem.controllers.FacultyDashboardController">

    <!-- ===== Top Header ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" bottom="15" left="20" right="20"/>
            </padding>

            <Label text="Faculty Dashboard"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Label text="University Management System"
                   style="-fx-text-fill: #666666;"/>
        </HBox>
    </top>

    <!-- ===== Left Navigation Panel ===== -->
    <left>
        <VBox spacing="15"
              style="-fx-border-color: #dddddd; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="20" left="15" right="15"/>
            </padding>

            <Button text="Profile"
                    prefWidth="180"
                    onAction="#viewProfile"/>

            <Button text="Courses"
                    prefWidth="180"
                    onAction="#viewCourses"/>

            <Button text="Attendance"
                    prefWidth="180"
                    onAction="#markAttendance"/>

            <Button text="Results"
                    prefWidth="180"
                    onAction="#addResult"/>

            <Button text="Logout"
                    prefWidth="180"
                    onAction="#logout"/>
        </VBox>
    </left>

    <!-- ===== Dynamic Content Area ===== -->
    <center>
        <StackPane fx:id="contentPane">
            <Label text="Select an option from the left menu"
                   style="-fx-text-fill: #555555; -fx-font-size: 14px;"/>
        </StackPane>
    </center>

</BorderPane>
