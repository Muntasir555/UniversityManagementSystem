<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.universitymanagementsystem.controllers.FacultyAddResultController"
      spacing="15" alignment="CENTER">

    <padding>
         <Insets top="20" bottom="20" left="40" right="40"/>
    </padding>

    <Label text="Add Student Result" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="studentIdField" promptText="Student ID" maxWidth="300"/>
    <TextField fx:id="subjectCodeField" promptText="Course Code" maxWidth="300"/>
    <TextField fx:id="marksField" promptText="Obtained Marks" maxWidth="300"/>
    <TextField fx:id="gradeField" promptText="Grade" maxWidth="300"/>
    
    <Button text="Publish Result" onAction="#publishResult" maxWidth="300"/>

</VBox>
