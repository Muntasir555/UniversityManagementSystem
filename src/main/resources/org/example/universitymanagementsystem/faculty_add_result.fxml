<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.universitymanagementsystem.controllers.FacultyAddResultController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Add Student Results">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <ComboBox fx:id="courseComboBox" onAction="#handleCourseSelection" promptText="Select Course" prefWidth="300.0" />

    <TableView fx:id="studentsTable" prefHeight="200.0" prefWidth="400.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="150.0" text="Student ID" />
            <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
        </columns>
    </TableView>

    <Label text="Enter Marks (Grade &amp; CGPA Auto-Calculated):" />
    <TextField fx:id="marksField" promptText="e.g. 85" prefWidth="100.0" maxWidth="200.0" />

    <Button onAction="#publishResult" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Publish Result" />
    
    <Label fx:id="statusLabel" />
</VBox>
