<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.universitymanagementsystem.controllers.StudentDashboardController"
            style="-fx-background-color: #e8eaf6;">

    <!-- ===== Top Header ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" BorderPane.alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #1a237e, #3949ab); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
            <padding>
                <Insets top="20" bottom="20" left="25" right="25"/>
            </padding>

            <Label text="Student Dashboard"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="University Management System"
                   style="-fx-text-fill: #c5cae9; -fx-font-size: 14px;"/>
        </HBox>
    </top>

    <!-- ===== Left Navigation ===== -->
    <left>
        <VBox spacing="12"
              style="-fx-background-color: white; -fx-border-color: #c5cae9; -fx-border-width: 0 1 0 0; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 2, 0);">
            <padding>
                <Insets top="25" left="15" right="15" bottom="25"/>
            </padding>

            <Button text="Profile"
                    prefWidth="200"
                    onAction="#viewProfile"
                    style="-fx-background-color: white; -fx-text-fill: #1a237e; -fx-border-color: #c5cae9; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="Results"
                    prefWidth="200"
                    onAction="#viewResults"
                    style="-fx-background-color: white; -fx-text-fill: #1a237e; -fx-border-color: #c5cae9; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <Button text="Attendance"
                    prefWidth="200"
                    onAction="#viewAttendance"
                    style="-fx-background-color: white; -fx-text-fill: #1a237e; -fx-border-color: #c5cae9; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 14px;"/>

            <VBox VBox.vgrow="ALWAYS"/>

            <Button text="Logout"
                    prefWidth="200"
                    onAction="#logout"
                    style="-fx-background-color: #ffebee; -fx-text-fill: #c62828; -fx-border-color: #ef9a9a; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-font-weight: bold;"/>
        </VBox>
    </left>


    <!-- ===== Center Content ===== -->
    <center>
        <VBox alignment="CENTER" spacing="15"
             style="-fx-padding: 20;">
            <Label text="Welcome, Student"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #283593;"/>

            <VBox alignment="CENTER" spacing="5"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-min-width: 200; -fx-max-width: 300;">
                <Label text="Current CGPA"
                       style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>
                <Label fx:id="cgpaLabel"
                       text="0.00"
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
            </VBox>

            <Label text="Select an option from the left panel to view details."
                   style="-fx-text-fill: #7986cb; -fx-font-size: 14px;"/>
        </VBox>
    </center>

</BorderPane>

