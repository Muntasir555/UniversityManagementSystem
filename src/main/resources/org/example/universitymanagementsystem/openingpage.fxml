<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.universitymanagementsystem.controllers.OpeningPageController"
            style="-fx-background-color: linear-gradient(to bottom right, #e3f2fd, #ffffff);">

    <!-- ===== Top Section ===== -->
    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="40" bottom="20"/>
            </padding>

            <Label text="University Management System"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1a237e; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 1, 1);"/>

            <Label text="Manage students, faculty and administration from one place"
                   style="-fx-font-size: 16px; -fx-text-fill: #5c6bc0;"/>
        </VBox>
    </top>


    <center>
        <HBox alignment="CENTER" spacing="40">
            <padding>
                <Insets top="20" bottom="40" left="20" right="20"/>
            </padding>

            <!-- Student Portal Card -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 30; -fx-min-width: 240; -fx-max-width: 240;">
                <Label text="Student Portal"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Label text="View results, CGPA and attendance"
                       style="-fx-text-fill: #757575; -fx-wrap-text: true; -fx-text-alignment: center;"
                       wrapText="true"/>
                <Button text="Login as Student"
                        prefWidth="180"
                        onAction="#openStudentLogin"
                        style="-fx-background-color: #3949ab; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 10 20; -fx-font-size: 14px;"/>
            </VBox>


            <!-- Faculty Portal Card -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 30; -fx-min-width: 240; -fx-max-width: 240;">
                <Label text="Faculty Portal"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Label text="Manage courses and student records"
                       style="-fx-text-fill: #757575; -fx-wrap-text: true; -fx-text-alignment: center;"
                       wrapText="true"/>
                <Button text="Login as Faculty"
                        prefWidth="180"
                        onAction="#openFacultyLogin"
                        style="-fx-background-color: #fb8c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 10 20; -fx-font-size: 14px;"/>
            </VBox>


            <!-- Admin Portal Card -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 30; -fx-min-width: 240; -fx-max-width: 240;">
                <Label text="Admin Portal"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Label text="Control system and user access"
                       style="-fx-text-fill: #757575; -fx-wrap-text: true; -fx-text-alignment: center;"
                       wrapText="true"/>
                <Button text="Login as Admin"
                        prefWidth="180"
                        onAction="#openAdminLogin"
                        style="-fx-background-color: #455a64; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 10 20; -fx-font-size: 14px;"/>
            </VBox>

        </HBox>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: rgba(255,255,255,0.6); -fx-border-color: #e0e0e0; -fx-border-width: 0 0 0 1;">
            <Label text="Notice Board" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
            <ListView fx:id="noticeListView" prefWidth="280" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: transparent; -fx-border-color: #cfd8dc; -fx-border-radius: 5;"/>
        </VBox>
    </right>


    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="15" top="10"/>
            </padding>

            <Label text="Â© 2025 University Management System"
                   style="-fx-text-fill: #90a4ae; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
