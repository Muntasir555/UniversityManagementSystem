<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.universitymanagementsystem.controllers.AdminAssignCourseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Assign Course to Batch">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <HBox spacing="10" alignment="CENTER">
        <ComboBox fx:id="departmentComboBox" promptText="Select Department" prefWidth="150.0" />
        <ComboBox fx:id="batchComboBox" promptText="Select Batch" prefWidth="150.0" />
        <ComboBox fx:id="semesterComboBox" promptText="Select Semester" prefWidth="150.0" />
    </HBox>

    <Label text="Courses to Assign" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <ScrollPane fitToWidth="true" prefHeight="300.0" style="-fx-background-color: transparent;">
        <VBox fx:id="courseContainer" spacing="10" alignment="TOP_CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <!-- Rows will be added here dynamically -->
        </VBox>
    </ScrollPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Add Course" onAction="#addCourseRow" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="150.0"/>
        <Button text="Assign All" onAction="#handleAssign" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="150.0"/>
    </HBox>

    <Label fx:id="statusLabel" />
</VBox>
